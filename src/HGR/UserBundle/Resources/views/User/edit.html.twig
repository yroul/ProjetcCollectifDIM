{% block body -%}
{% include "HGRUserBundle:User:menu-top.html.twig" %}
    <form action="{{ path('user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <fieldset><legend>User edit</legend>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        
        <p>
            <button type="submit">Edit</button>
            <a class="btn" href="{{ path('user') }}">
            Cancel
            </a>
            <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
            </form>
        </p>
        </fieldset>
    </form>
{% endblock %}
