{% extends '::base.html.twig' %}

{% block body -%}
    <h1>StockProduct list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Magasin</th>
                <th>Produit</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                
                <td>{{ entity.store.name }}</td>
                <td><a href="{{ path('stockproduct_show', { 'id': entity.id }) }}">{{ entity.product.name }}</a></td>
                <td>{{ entity.amount }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('stockproduct_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('stockproduct_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('stockproduct_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
