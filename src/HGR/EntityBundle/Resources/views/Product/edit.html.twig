{% extends '::base.html.twig' %}

{% block body -%}
    {% include "HGREntityBundle:Product:menu-top.html.twig" %}
    <form action="{{ path('product_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <fieldset><legend>Product edit</legend>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
            <a class="btn" href="{{ path('product') }}">
            Cancel
            </a>
            
        </p>
        </fieldset>
    </form>
    <form action="{{ path('product_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        <button type="submit">Delete</button>
    </form>
        
{% endblock %}
