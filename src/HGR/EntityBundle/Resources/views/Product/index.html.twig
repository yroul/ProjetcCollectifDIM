{% extends '::base.html.twig' %}

{% block body -%}
    {% include "HGREntityBundle:Product:menu-top.html.twig" %}
    <h1>Product list</h1>

    <table class="records_list table-hover table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Origin</th>
                <th>Brand</th>
                <th>Tags</th>
                <th>Imageurl</th>
                <th>Attributes</th>
                <th>Price</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.origin }}</td>
                <td>{{ entity.brand }}</td>
                <td>{{ entity.tags }}</td>
                <td>{{ entity.imageURL }}</td>
                <td>{{ entity.attributes }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('product_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('product_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('product_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
