{% extends '::base.html.twig' %}

{% block body -%}
    {% include "HGREntityBundle:Category:menu-top.html.twig" %}
    <form action="{{ path('category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <fieldset><legend>Category edit</legend>
            <input type="hidden" name="_method" value="PUT" />
            {{ form_widget(edit_form) }}
            <p>
                <button type="submit">Edit</button>
                <a class="btn" href="{{ path('category') }}">Cancel</a>
                <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
                     <input type="hidden" name="_method" value="DELETE" />
                      {{ form_widget(delete_form) }}
                      <button type="submit">Delete</button>
                 </form>
            </p>
        </fieldset>
    </form>
{% endblock %}
