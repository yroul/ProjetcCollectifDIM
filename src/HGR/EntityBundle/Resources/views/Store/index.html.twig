{% extends '::base.html.twig' %}

{% block body -%}
     {% include "HGREntityBundle:Store:menu-top.html.twig" %}
    <legend>Store list</legend>
    <table class="records_list table-hover table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Postalcode</th>
                <th>City</th>
                <th>Country</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.postalCode }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.country }}</td>
                <td>
                <ul>
                    <li>
                        <i class="icon-search"></i><a href="{{ path('store_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <i class="icon-pencil"></i><a href="{{ path('store_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     <div class="form-actions">
        <a class="btn btn-primary" href="{{ path('store_new') }}">
            Create a new entry
        </a>
    </div>
    {% endblock %}
